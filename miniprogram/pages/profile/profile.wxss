/* 个人主页样式 */
.profile-page {
  min-height: 100vh;
  background-color: #F8F7F5;
  padding-bottom: 160rpx;
}

/* 头部区域 */
.header-section {
  position: relative;
  padding-bottom: 32rpx;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 400rpx;
  background: linear-gradient(135deg, #FFB347 0%, #81D4FA 100%);
}

.header-content {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 64rpx;
}

.report-btn {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  padding: 16rpx 24rpx;
}

/* 头像 */
.avatar-wrapper {
  position: relative;
  margin-bottom: 24rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 8rpx solid #FFFFFF;
}

.avatar-border {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FFB347 0%, #81D4FA 100%);
  z-index: -1;
}

/* 用户信息 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.nickname {
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: bold;
}

.location-status {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 标签滚动区域 */
.tags-scroll {
  white-space: nowrap;
  padding: 24rpx 0;
}

.tags-container {
  display: inline-flex;
  padding: 0 32rpx;
  gap: 16rpx;
}

/* 关注数据 */
.stats-section {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 24rpx 32rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stat-number {
  color: #FFB347;
  font-size: 48rpx;
  font-weight: bold;
}

.stat-label {
  color: #666666;
  font-size: 28rpx;
}

.stat-divider {
  width: 2rpx;
  height: 64rpx;
  background-color: #E0E0E0;
}

/* 主要内容区域 */
.main-content {
  padding: 0 32rpx;
}

/* 区块样式 */
.section-block {
  margin-bottom: 32rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

.required {
  color: #FF5252;
}

.section-content {
  margin-bottom: 16rpx;
}

.text-item {
  font-size: 28rpx;
  color: #666666;
  line-height: 48rpx;
  margin-bottom: 8rpx;
}

.text-content {
  font-size: 28rpx;
  color: #666666;
  line-height: 48rpx;
}

/* 爱好网格 */
.hobbies-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 32rpx;
}

.hobby-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.hobby-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.hobby-icon .icon {
  font-size: 48rpx;
}

.hobby-label {
  font-size: 24rpx;
  color: #666666;
}

/* 技能容器 */
.skills-container {
  display: flex;
  flex-wrap: wrap;
}

/* AI 标签 */
.ai-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

/* 照片网格 */
.photos-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.photo-item {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 24rpx;
}

/* 补充资料网格 */
.materials-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.material-item {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 24rpx;
}

/* 空状态 */
.empty-state {
  padding: 80rpx 0;
  text-align: center;
}

.empty-text {
  color: #999999;
  font-size: 28rpx;
}

/* 底部操作栏 */
.bottom-placeholder {
  height: 160rpx;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #F8F7F5;
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #E0E0E0;
  display: flex;
  gap: 24rpx;
  z-index: 100;
}

.bottom-actions .btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.bottom-actions .btn-outline {
  flex: 1;
}

.bottom-actions .btn-primary {
  flex: 2;
}

