.page {
  min-height: 100vh;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}

.status-bar {
  height: 44px;
}

.header {
  position: relative;
  height: 220px;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #888BF4 0%, #5151C6 100%);
}

.header-top {
  position: relative;
  z-index: 1;
  padding: 12px 16px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.icon-btn {
  width: 24px;
  height: 24px;
  border-radius: 12px;
  background-color: rgba(0, 0, 0, 0.2);
}

.handle {
  color: #ffffff;
  font-size: 14px;
}

.avatar-wrap {
  position: relative;
  z-index: 1;
  margin-top: 40px;
  display: flex;
  justify-content: center;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 40px;
  border: 4px solid #ffffff;
}

.profile-main {
  padding: 16px 24px 80px;
}

.name-location {
  align-items: center;
}

.name {
  display: block;
  font-size: 20px;
  font-weight: 600;
  color: #242424;
}

.location {
  display: block;
  margin-top: 4px;
  font-size: 12px;
  color: #9e9e9e;
}

.follow-bar {
  margin-top: 16px;
  padding: 12px 24px;
  border-radius: 12px;
  background-color: #f5f6f8;
  display: flex;
  justify-content: space-between;
}

.follow-item {
  align-items: center;
}

.follow-number {
  display: block;
  font-size: 16px;
  font-weight: 600;
  color: #242424;
}

.follow-label {
  display: block;
  margin-top: 2px;
  font-size: 12px;
  color: #9e9e9e;
}

.social-row {
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
}

.social-item {
  flex: 1;
  flex-direction: row;
  align-items: center;
}

.dot {
  width: 6px;
  height: 6px;
  border-radius: 3px;
  background-color: #888BF4;
  margin-right: 6px;
}

.social-text {
  font-size: 12px;
  color: #555555;
}

.bottom-nav {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 80px;
  padding: 8px 24px 16px;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.nav-item {
  flex: 1;
  align-items: center;
}

.nav-item.center {
  align-items: center;
}

.nav-label {
  font-size: 10px;
  color: #9e9e9e;
}

.nav-item.active .nav-label {
  color: #5151C6;
}

.add-btn {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  background: linear-gradient(135deg, #888BF4 0%, #5151C6 100%);
}

