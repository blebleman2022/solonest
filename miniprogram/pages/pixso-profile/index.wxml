<view class="page">
  <view class="status-bar"></view>

  <view class="header">
    <view class="header-bg"></view>
    <view class="header-top">
      <view class="icon-btn back" bindtap="onBack"></view>
      <text class="handle">{{user.handle}}</text>
      <view class="icon-btn setting" bindtap="onSetting"></view>
    </view>
    <view class="avatar-wrap">
      <image class="avatar" src="{{user.avatar}}" mode="aspectFill"></image>
    </view>
  </view>

  <view class="profile-main">
    <view class="name-location">
      <text class="name">{{user.name}}</text>
      <text class="location">{{user.location}}</text>
    </view>

    <view class="follow-bar">
      <view class="follow-item" bindtap="onTapFollowers">
        <text class="follow-number">{{user.followers}}</text>
        <text class="follow-label">Followers</text>
      </view>
      <view class="follow-item" bindtap="onTapFollowing">
        <text class="follow-number">{{user.following}}</text>
        <text class="follow-label">Following</text>
      </view>
    </view>

    <view class="social-row">
      <view class="social-item" data-type="website" bindtap="onTapSocial">
        <view class="dot"></view>
        <text class="social-text">Website</text>
      </view>
      <view class="social-item" data-type="instagram" bindtap="onTapSocial">
        <view class="dot"></view>
        <text class="social-text">Instagram</text>
      </view>
      <view class="social-item" data-type="facebook" bindtap="onTapSocial">
        <view class="dot"></view>
        <text class="social-text">Facebook</text>
      </view>
    </view>
  </view>

  <view class="bottom-nav">
    <view class="nav-item active">
      <text class="nav-label">Home</text>
    </view>
    <view class="nav-item">
      <text class="nav-label">Explore</text>
    </view>
    <view class="nav-item center" bindtap="onAdd">
      <view class="add-btn"></view>
    </view>
    <view class="nav-item">
      <text class="nav-label">Profile</text>
    </view>
  </view>
</view>

